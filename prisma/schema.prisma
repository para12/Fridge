generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = process.env("DATABASE_URL")
}

model Food {
  date     Int
  fridgeID String 
  id       String  @unique
  name     String
  quantity String
  shelf    String
  fridge   Fridge @relation(fields: [fridgeID], references: [id])
}

model Fridge {
  id   String @unique
  name String
  foods Food[]
  users User[]
}

model User {
  email    String @unique
  fridgeID String? 
  id       String  @id
  fridge   Fridge? @relation(fields: [fridgeID], references: [id])
  loginSecret String
}
